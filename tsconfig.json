{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "migration.ts",
    "populate.ts",
    "gulpfile.ts",
    "migrations/*.ts",
    "**/*.spec.ts",
    "src/ui-extensions/*"
  ]
}
